FROM node:18-bullseye AS node_builder

WORKDIR /app
COPY package*.json ./
COPY webpack.config.js ./
COPY heritrace/static/js/ ./heritrace/static/js/

RUN npm install
RUN npm run build

FROM python:3.11-bullseye

ARG DOCKER_METADATA_AUTHOR
ARG DOCKER_METADATA_DESCRIPTION
ARG DOCKER_METADATA_VERSION

LABEL org.opencontainers.image.authors=$DOCKER_METADATA_AUTHOR
LABEL org.opencontainers.image.description=$DOCKER_METADATA_DESCRIPTION
LABEL org.opencontainers.image.version=$DOCKER_METADATA_VERSION

RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY pyproject.toml poetry.lock ./

RUN pip install poetry
RUN poetry config virtualenvs.create false
RUN poetry install --only main --no-root

COPY app.py ./
COPY heritrace/ ./heritrace/
COPY babel/ ./babel/
COPY resources/ ./resources/

COPY --from=node_builder /app/heritrace/static/ ./heritrace/static/

COPY config.py .