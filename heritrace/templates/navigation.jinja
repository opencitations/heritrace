<script>
    $(document).ready(function() {
        if (window.location.pathname === '/') {
            $('.heritrace-navbar').addClass('no-margin');
        }

        function setActiveNavLink() {
            var currentPath = window.location.pathname;
            
            $('.nav-link-modern').removeClass('active');

            if (currentPath.startsWith('/catalogue')) {
                $('#catalogue-link').addClass('active');
            } else if (currentPath.startsWith('/create-entity')) {
                $('#create-entity-link').addClass('active');
            } else if (currentPath.startsWith('/time-vault')) {
                $('#time-vault-link').addClass('active');
            } else if (currentPath.startsWith('/endpoint')) {
                $('#endpoint-link').addClass('active');
            } else if (currentPath === '/login') {
                $('#login-link').addClass('active');
            } else if (currentPath === '/logout') {
                $('#logout-link').addClass('active');
            }
        }

        setActiveNavLink();

        var $navCollapse = $('#heritraceNav');
        var $toggleButton = $('.heritrace-mobile-toggle');

        $navCollapse.on('show.bs.collapse', function () {
            $toggleButton.addClass('active');
        });

        $navCollapse.on('hide.bs.collapse', function () {
            $toggleButton.removeClass('active');
        });

        $(document).on('click', function(event) {
            // Ignora i click programmatici (non generati dall'utente)
            if (!event.isTrusted) {
                return;
            }

            var $navbar = $('.heritrace-navbar');

            // Check if the navbar is open and the click is outside the navbar
            if ($navCollapse.hasClass('show') && !$navbar.is(event.target) && $navbar.has(event.target).length === 0) {
                $toggleButton.trigger('click');
            }
        });
    });
</script>